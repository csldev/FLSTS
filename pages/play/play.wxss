/* pages/play/play.wxss */

.container1{
  position:absolute;
  background-color: #23ff4f;
  width:100%;
  height:100%;
  box-sizing: border-box;
} 


image{
  margin-left: 80rpx;
  margin-top:80rpx;
  width: 300rpx;
  height:300rpx;
  border-radius: 100%;
  opacity: 0.8;
}


swiper{
  height: 600rpx;
  width:600rpx;
  margin-left: 75rpx;
  margin-top:50rpx;
  border-radius: 7%;
  background-color: #12ee4e;
}

swiper-item{
  height: 100%;
}


scroll-view{
  width: 600rpx;
  height: 100%;
  text-align: center;
}

text{
  height: 100%;
  font-size: 35rpx;
  color:#333;
  line-height: 2em;
}

.bottom{
  margin-top: 50rpx;
  display:flex;
  flex-direction: row;
}

button{
  width:150rpx;
  height: 75rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}